    "version": "2.0.0",
    "tasks": [

        {
            "label": "build all testing",
            "type": "shell",
            "command": "${cwd}/.vscode/t6-compiler.exe",
            "args": [
                "${workspaceFolder}\\src\\scripts\\zm", "C:\\Program Files (x86)\\Steam\\steamapps\\common\\Call of Duty Black Ops II Plutonuim\\storage\\t6\\scripts\\zm", "${workspaceFolder}\\src\\scripts\\zm"
            ],

            "options": {"shell": {"executable": "cmd.exe","args": ["/C"]}},
            "problemMatcher": [
                //(^.*:*.gsc)|(^Bad syntax)|(WARNING)(:\s+)(.*)$|(\d*)\.$
                {
                    // The problem is owned by the cpp language service.
                    //"owner": "gsc",
                    // The file name for reported problems is relative to the opened folder.
                    "fileLocation": ["absolute"],
                    "owner": "CodScript",
                    // The actual pattern to match problems in the output.
                    "pattern":[
                        {
                            "regexp": "^(.*):(\\d+):(\\d+):(Error)\\s+(.*)$",
                            "file": 1,
                            "line": 2,
                            "column": 3,
                            "severity": 4,
                            "message": 5
                        }
                    ]
                }
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
